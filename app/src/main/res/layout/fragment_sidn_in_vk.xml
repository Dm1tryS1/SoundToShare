<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/logo"
            android:background="@drawable/gradient_home"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/question"
            android:layout_below="@+id/logo"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="@string/home_sign_in"
            android:fontFamily="@font/abril_fatface"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"

            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            android:layout_marginTop="30sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignIn"
            android:text="Sign In"

            android:layout_width="match_parent"
            android:layout_height="85sp"
            android:textSize="30sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/logo"

            android:textColor="@color/black"
            android:background="@drawable/rounded_button"

            android:drawableLeft="@drawable/ic_vk_social_media_logo_icon"
            android:drawablePadding="15sp"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/question"

            app:layout_constraintStart_toEndOf="parent"
            android:layout_marginStart="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50sp"

            android:layout_marginTop="30sp"
            android:paddingStart="15sp"/>

    <ImageView
            android:id="@+id/questionView"
            tools:ignore="MissingConstraints"
            android:layout_height="0dp"
            android:layout_width="match_parent"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"

            app:layout_constraintEnd_toStartOf="@id/multimediaMusicView"
            android:layout_marginEnd="270dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40sp"

            app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
            android:layout_marginTop="145dp"

            android:background="@drawable/ic_run_music_icon"
           />

    <View
            android:id="@+id/multimediaMusicView"
            tools:ignore="MissingConstraints"
            android:layout_height="0dp"
            android:layout_width="match_parent"

            app:layout_constraintStart_toEndOf="@id/musicView"
            android:layout_marginStart="160dp"

            app:layout_constraintEnd_toStartOf="@id/addMusicView"
            android:layout_marginEnd="160dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70sp"

            app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
            android:layout_marginTop="170dp"

            android:background="@drawable/ic_multimedia_music_player_shuffle_song_icon"
             />

    <View
            android:id="@+id/addMusicView"
            tools:ignore="MissingConstraints"
            android:layout_height="0dp"
            android:layout_width="match_parent"

            app:layout_constraintStart_toEndOf="@id/multimediaMusicView"
            android:layout_marginStart="270dp"

            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40sp"

            app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
            android:layout_marginTop="145dp"

            android:background="@drawable/ic_add_music_icon"
            />

</androidx.constraintlayout.widget.ConstraintLayout>