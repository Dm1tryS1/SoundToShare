<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/fullNameAndAvatarHolderShimmer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/backgroundThemeNavigationShimmer">

    <TextView
            android:id="@+id/button1_shimmer"
            android:background="@color/shimmer_color"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@id/button2_shimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>


    <TextView
            android:id="@+id/button2_shimmer"
            android:background="@color/shimmer_color"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textSize="25sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/button1_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>