<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundTheme">

    <TextView
            android:id="@+id/logo"
            android:background="@color/backgroundThemeNavigation"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawablePadding="-25dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            app:drawableStartCompat="@drawable/ic_tmplogo" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignOut"
            android:text="@string/sign_out"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:background="@drawable/rounded_button"
            android:textColor="@color/textColor"

            android:drawableStart="@drawable/ic_vk_social_media_logo_icon_out"
            android:drawablePadding="15sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"

            android:layout_marginTop="30sp"
            android:paddingStart="15sp" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonIncognito"
            android:text="@string/incognito_mode"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/buttonSignOut"
            android:background="@drawable/rounded_button"
            android:textColor="@color/textColor"

            android:drawableStart="@drawable/ic_incognito"

            tools:ignore="MissingConstraints"
            android:drawablePadding="15sp"
            app:layout_constraintTop_toBottomOf="@id/buttonSignOut"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"

            android:layout_marginTop="15sp"
            android:paddingStart="15sp" />

</androidx.constraintlayout.widget.ConstraintLayout>