<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/logo"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/buttonSignIn"
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/abril_fatface"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/logo"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"


            android:drawableLeft="@drawable/ic_spotify"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15sp"/>

    <Button
            android:id="@+id/buttonSignOut"
            android:text="Sign Out"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/abril_fatface"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/buttonSignIn"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"

            android:drawableLeft="@drawable/ic_google"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15sp" />

    <Button
            android:id="@+id/buttonIncognito"
            android:text="Incognito Mode"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/abril_fatface"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/buttonSignOut"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"

            android:drawableLeft="@drawable/ic_incognito"

            tools:ignore="MissingConstraints"

            app:layout_constraintTop_toBottomOf="@id/buttonSignOut"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>