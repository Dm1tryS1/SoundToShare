<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/logo"
            android:background="@color/primary_green"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/gotham_bold"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableLeft="@drawable/ic_tmplogo"
            android:drawablePadding="-25dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignIn"
            android:text="Sign In"

            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/logo"

            android:textColor="@color/black"
            android:background="@drawable/rounded_button"

            android:drawableLeft="@drawable/ic_vk_social_media_logo_icon"
            android:drawablePadding="15sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"

            android:layout_marginTop="15sp"
            android:paddingStart="15sp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSignOut"
            android:text="Sign Out"

            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/buttonSignIn"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"

            android:drawableLeft="@drawable/ic_vk_social_media_logo_icon_out"
            android:drawablePadding="15sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/buttonSignIn"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15sp"
            android:paddingStart="15sp" />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonIncognito"
            android:text="Incognito Mode"
            android:layout_width="match_parent"
            android:layout_height="75sp"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:fontFamily="@font/gotham_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_below="@+id/buttonSignOut"
            android:background="@drawable/rounded_button"
            android:textColor="@color/black"

            android:drawableStart="@drawable/ic_incognito"

            tools:ignore="MissingConstraints"
            android:drawablePadding="15sp"
            app:layout_constraintTop_toBottomOf="@id/buttonSignOut"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"

            android:layout_marginTop="15sp"
            android:paddingStart="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>