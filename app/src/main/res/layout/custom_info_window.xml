<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:orientation="horizontal"
        android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_green"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

        <ImageView
                android:id="@+id/infoWindowAvatar"
                android:layout_height="80dp"
                android:layout_width="80dp"
                android:translationZ="90dp"

                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                />

        <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/name_black"
                android:textSize="14sp"

                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@id/infoWindowAvatar"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                />

        <TextView
                android:id="@+id/lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/name_black"
                android:textSize="14sp"

                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@id/firstName"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"

                />

        <TextView
                android:id="@+id/snippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="10"
                android:textColor="@color/name_black"
                android:textSize="14sp"

                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@id/infoWindowAvatar"
                app:layout_constraintTop_toBottomOf="@id/lastName"
                app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>


        <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/name_black"
                android:textSize="14sp"
                android:textStyle="bold"

                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toStartOf="@id/likeWindowButton"
                app:layout_constraintTop_toBottomOf="@id/infoWindowAvatar"

                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

        <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/likeWindowButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.9"

                android:clickable="true"
                android:elevation="30dp"
                android:src="@android:drawable/ic_media_play"
                android:focusable="true"

                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/ic_approve_hand_like_thumb_up_icon"

                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/infoWindowAvatar"
                app:layout_constraintEnd_toStartOf="@id/playWindowButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="3dp"
                />

        <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/playWindowButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:alpha="0.9"

                android:clickable="true"
                android:elevation="30dp"
                android:src="@android:drawable/ic_media_play"
                android:focusable="true"

                android:background="@drawable/rounded_button"
                android:drawableStart="@drawable/ic_circle_fill_play_icon"

                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/infoWindowAvatar"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:paddingStart="0dp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

