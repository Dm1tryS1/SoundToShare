<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/logo"
            android:background="@drawable/gradient_home"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_vertical|center_horizontal"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:id="@+id/question"
            android:layout_below="@+id/logo"
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You like musik? Lets go hear!"
            android:fontFamily="@font/abril_fatface"
            android:textColor="@color/black"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"/>

    <TextView
            android:id="@+id/selection"
            android:layout_below="@+id/question"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите сервис в котором вы слушаете музыку и войдите в свой аккаунт!"
            android:fontFamily="@font/abril_fatface"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center_vertical|center_horizontal"
            tools:ignore="MissingConstraints"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/question"
            />

    <ImageButton
            android:id="@+id/leftArrow"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_arrow_down_left_icon"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/selection"
            android:layout_marginTop="15sp"
            app:layout_constraintRight_toLeftOf="@+id/rightArrow"
            />
    <ImageButton
            android:id="@+id/rightArrow"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginLeft="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_arrow_down_right_icon"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selection"
            android:layout_marginTop="15sp"
            app:layout_constraintLeft_toRightOf="@+id/leftArrow"
            />
    <View
            android:id="@+id/yandexView"
            tools:ignore="MissingConstraints"
            android:layout_height="350sp"
            android:layout_width="150sp"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15sp"
            android:background="@drawable/gradient_yandex_view"
         />

    <View
            android:id="@+id/spotifyView"
            tools:ignore="MissingConstraints"
            android:layout_height="350sp"
            android:layout_width="150sp"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15sp"
            android:background="@drawable/gradient_spotify_view"

            />
    <View
            android:id="@+id/questionView"
            tools:ignore="MissingConstraints"
            android:layout_height="200sp"
            android:layout_width="240sp"
            app:layout_constraintLeft_toRightOf="@+id/spotifyView"
            app:layout_constraintRight_toLeftOf="@+id/yandexView"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/ic_question_service_icon"
            />

    <ImageButton
            android:id="@+id/yandex"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginEnd="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_yandex"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/yandexView"
            android:layout_marginTop="15sp"

            />
    <ImageButton
            android:id="@+id/spotify"
            android:background="@drawable/oval_button"
            android:layout_below="@+id/selection"
            android:layout_marginStart="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_spotify"
            android:keepScreenOn="true"
            tools:ignore="MissingConstraints"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spotifyView"
            android:layout_marginTop="15sp"

            />

</androidx.constraintlayout.widget.ConstraintLayout>